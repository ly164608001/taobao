<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lxhrainy.myjz.admin.basicdata.dao.ITbHousesFeatureDao">
    
	
	<sql id="columns">
		T.id AS "id",
		T.name AS "name",
		T.deleted AS "deleted"
	</sql>
	
	<select id="getById" resultType="TbHousesFeature">
		SELECT 
			<include refid="columns"/>
		FROM tb_houses_feature T
		WHERE T.id = #{id}
	</select>
	
	<select id="findListByPage" resultType="TbHousesFeature">
		SELECT 
			<include refid="columns"/>
		FROM tb_houses_feature T
		<if test="condition!=null">
			<where>
				<if test="condition.model!=null">
					<if test="condition.model.name!=null and condition.model.name!=''">
						AND T.name LIKE '${condition.model.name}%'
					</if>
					<if test="condition.model.deleted != null">
						AND T.deleted = #{condition.model.deleted}
					</if>
				</if>
			</where>
			order by T.ID DESC
			<include refid="Sql.pager" />
		</if>
	</select>
	<select id="getCountByCondition" resultType="int">
		SELECT 
			count(*)
		FROM tb_houses_feature T
		<if test="condition!=null">
			<where>
				<if test="condition.model!=null">
					<if test="condition.model.name!=null and condition.model.name!=''">
						AND T.name LIKE '${condition.model.name}%'
					</if>
					<if test="condition.model.deleted != null">
						AND T.deleted = #{condition.model.deleted}
					</if>
				</if>
			</where>
		</if>
	</select>
	
	<select id="findAllList" resultType="TbHousesFeature">
		SELECT 
			<include refid="columns"/>
		FROM tb_houses_feature T
		<where>
			<if test="condition!=null">
				<if test="condition.model!=null">
					<if test="condition.model.name!=null and condition.model.name!=''">
						AND T.name LIKE '${condition.model.name}%'
					</if>
					<if test="condition.model.deleted != null">
						AND T.deleted = #{condition.model.deleted}
					</if>
				</if>
			</if>
		</where>		
	</select>
	
	<insert id="insert">
		INSERT INTO tb_houses_feature(
			name
		) VALUES (
			#{name}
		)
		<!-- 配置Mysql主键自动增长 -->
		<selectKey resultType="int" keyProperty="id">
			select
			LAST_INSERT_ID() as value  
		</selectKey>
	</insert>
	
	<update id="update">
		UPDATE tb_houses_feature
		<set>
			<if test="name!=null">
				name = #{name}
			</if>
		</set>
		WHERE id = #{id}
	</update>
	
	<update id="deleteById">
		update tb_houses_feature set 
			deleted=1
		WHERE id = #{id}
	</update>
	
	<select id="getByName" resultType="TbHousesFeature">
		SELECT 
			<include refid="columns"/>
		FROM tb_houses_feature T
		WHERE T.name = #{name} AND T.deleted = 0
	</select>
</mapper>