<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lxhrainy.myjz.admin.interaction.dao.IInteractionNoteRecordDao">
    
	<resultMap id="InteractionNoteRecord" type="com.lxhrainy.myjz.admin.interaction.model.InteractionNoteRecord">
		<id property="id" column="id" />
		<result property="content" column="content" />
		<result property="sendtime" column="sendtime" />
		<result property="senduser" column="senduser" />
		<result property="receiveuser" column="receiveuser" />
		<result property="type" column="type" />
		<result property="description" column="description" />
		<!-- <collection property="roleList" ofType="Role">
			<id property="id" column="roleList.id" />
			<result property="name" column="roleList.name" />
		</collection> -->
	</resultMap>
	<sql id="interactionNoteRecordColumns">
		T.id AS "id",
		T.content AS "content",
		T.sendtime AS "sendtime",
		T.senduser AS "senduser",
		T.receiveuser AS "receiveuser",
		T.type AS "type",
		T.description AS "description"
	</sql>
	
    
	<sql id="interactionNoteRecordJoins">
	<!-- 左连接，模糊搜索
	Left JOIN user_info user ON user.id = T.userid-->
	<!--Left join user_info payeeuser on payeeuser.id = T.payeeuserid-->
	</sql>
    
	<select id="getById" resultType="InteractionNoteRecord">
		SELECT 
			<include refid="interactionNoteRecordColumns"/>
		FROM interaction_note_record T
		<include refid="interactionNoteRecordJoins"/>
		WHERE T.id = #{id}
	</select>
	
	<select id="findListByPage" resultMap="InteractionNoteRecord">
		SELECT 
			<include refid="interactionNoteRecordColumns"/>
		FROM interaction_note_record T
		<include refid="interactionNoteRecordJoins"/>
		<if test="condition!=null">
			<where>
				<if test="condition.model!=null">
					<if test="condition.model.content!=null and condition.model.content!=''">
						T.content LIKE '${condition.model.content}%'
					</if>
				</if>
			</where>
			order by T.ID DESC
			<include refid="Sql.pager" />
		</if>
	</select>
	<select id="getCountByCondition" resultType="int">
		SELECT 
			count(*)
		FROM interaction_note_record T
		<include refid="interactionNoteRecordJoins"/>
		<if test="condition!=null">
			<where>
				<if test="condition.model!=null">
					<if test="condition.model.content!=null and condition.model.content!=''">
						T.content LIKE '${condition.model.content}%'
					</if>
				</if>
			</where>
		</if>
	</select>
	
	<select id="findAllList" resultType="InteractionNoteRecord">
		SELECT 
			<include refid="interactionNoteRecordColumns"/>
		FROM interaction_note_record T
		<include refid="interactionNoteRecordJoins"/>
		<where>
			<if test="condition!=null">
				<if test="condition.model!=null">
					<if test="condition.model.content!=null and condition.model.content!=''">
						T.content LIKE '${condition.model.content}%'
					</if>
				</if>
			</if>
		</where>		
	</select>
	
	<insert id="insert">
		INSERT INTO interaction_note_record(
			content,
			sendtime,
			senduser,
			receiveuser,
			type,
			description
		) VALUES (
			#{content},
			#{sendtime},
			#{senduser},
			#{receiveuser},
			#{type},
			#{description}
		)
		<!-- 配置Mysql主键自动增长 -->
		<selectKey resultType="int" keyProperty="id">
			select
			LAST_INSERT_ID() as value  
		</selectKey>
	</insert>
	
	<update id="update">
		UPDATE interaction_note_record
		<set>
			<if test="id!=null">
				id = #{id},
			</if>
			<if test="content != null">
				content = #{content},
			</if>
			<if test="sendtime != null">
				sendtime = #{sendtime},
			</if>
			<if test="senduser != null">
				senduser = #{senduser},
			</if>
			<if test="receiveuser != null">
				receiveuser = #{receiveuser},
			</if>
			<if test="type != null">
				type = #{type},
			</if>
			<if test="description != null">
				description = #{description},
			</if>
		</set>
		WHERE id = #{id}
	</update>
	
	<update id="deleteById">
		update interaction_note_record set 
			deleted=1
		WHERE id = #{id}
	</update>
</mapper>